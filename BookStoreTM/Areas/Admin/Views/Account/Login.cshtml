                <input asp-for="Password" class="form-control" type="password" placeholder="Mật khẩu" value="Abc@123" required />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-7">
                    @* <div class="icheck-primary">
