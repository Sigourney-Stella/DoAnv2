@model BookStoreTM.Models.EF.UserModel
@{
    ViewBag.Title = "Thêm mới tài khoản";

}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thêm mới tài khoản</h3>

        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label>Id</label>
                    @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Tài khoản</label>
                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                </div>
               
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                </div>
               
                <div class="form-group">
                    <label>Mật khẩu</label>
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                </div>
              
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Thêm mới</button>
                </div>
            }
        </div>
        <div class="card-footer">
        </div>
    </div>
</section>
