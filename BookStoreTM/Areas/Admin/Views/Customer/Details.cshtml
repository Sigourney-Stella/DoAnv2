@model BookStoreTM.Models.Customer
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chi tiết đơn hàng</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mã khach hàng</label>
                        <p class="form-control">@Model.CustomerID</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Họ và tên</label>
                        <p class="form-control">@Model.Fullname</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Ngày sinh</label>
                        @if (Model.Brithday.HasValue)
                        {
                            <p class="form-control">@Model.Brithday.Value.ToString("dd/MM/yyyy")</p>
                        }
                        else
                        {
                            <p class="form-control text-danger">Chưa cập nhập</p>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <p class="form-control">@Model.Phone</p>
                        }
                        else
                        {
                            <p class="form-control text-danger">Chưa cập nhập</p>
                        }
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <p class="form-control">@Model.Email</p>
                    </div>
                    
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Địa chỉ</label>
                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            <p class="form-control">@Model.Address</p>
                        }
                        else
                        {
                            <p class="form-control text-danger">Chưa cập nhập</p>
                        }
                        
                    </div>
                </div>
            </div>
            <div class="row">   
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Ngày tạo</label>
                        <p class="form-control">@Model.CreateDate.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Ngày cập nhật</label>
                        @if (Model.UpdateDate.HasValue)
                        {
                            <p class="form-control">@Model.UpdateDate.Value.ToString("dd/MM/yyyy")</p>
                        }   
                        else
                        {
                            <p class="form-control text-danger">Không có lần cập nhật nào</p>
                        }
                    </div>
                </div>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-danger">Quay lại</a>
            </div>
        </div>
    </div>

</section>

