@model BookStoreTM.Models.Payment

@{
    ViewData["Title"] = "Sửa phương thức thanh toán";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Sửa phương thức thanh toán</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Danh mục</a></li>
                    <li class="breadcrumb-item active">Sửa</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin </h3>
        </div>

        <div class="bs-stepper-content">
            @using (Html.BeginForm("Edit", "Payments", FormMethod.Post, new { }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false)
                @Html.HiddenFor(x => x.PaymentId)

                <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên phương thức thanh toán</label>
                        @Html.TextBoxFor(x => x.PaymentName, new { @class = "form-control", @placeholder = "Tên phương thức" })
                        @Html.ValidationMessageFor(x => x.PaymentName, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên người tạo</label>
                        @Html.TextBoxFor(x => x.CreatedBy, new { @class = "form-control", @placeholder = "Tên người tạo" })
                        @Html.ValidationMessageFor(x => x.CreatedBy, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-danger">Quay lại</a>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
