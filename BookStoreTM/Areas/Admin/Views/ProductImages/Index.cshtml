@model IEnumerable<BookStoreTM.Models.ProductImage>

@{
    ViewData["Title"] = "Danh sách hình ảnh";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Hình ảnh sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title" style="margin-top: 0.5rem;"> @ViewBag.Title </h3>
            <div class="row card-tools">
                <div>
                    <a asp-action="Create" asp-controller="ProductImages" class="btn btn-primary">Thêm mới</a>
                    @* <a href="#" class="btn btn-danger" id="BtnDeleteAll">Xóa</a> *@
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="tab-pane active" id="timeline">
                <div class="timeline timeline-inverse">
                    <div>
                        <div class="timeline-item">
                            <h3 class="timeline-header">Hình ảnh mô tả sản phẩm</h3>
                            <div class="timeline-body">
                                @foreach (var item in Model)
                                {
                                    <img src="@item.Url" style="height:150px; width:150px" />
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .timeline::before {
        background: none;
    }

    .timeline > div > .timeline-item {
        margin-left: 15px;
    }
</style>
